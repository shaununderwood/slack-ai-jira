{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JS target
    "module": "CommonJS",                        // For Node.js compatibility
    "moduleResolution": "node",
    "esModuleInterop": true,                     // So we can use 'import x from y'
    "forceConsistentCasingInFileNames": true,
    "strict": true,                              // Enable all strict type-checking
    "skipLibCheck": true,                        // Faster builds by skipping type checks of dependencies
    "outDir": "dist",                            // Output compiled JS files here
    "rootDir": "src",                            // Our source files live here
    "resolveJsonModule": true                    // If you import .json files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}